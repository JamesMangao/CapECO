<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_green_phone"
    tools:context=".user_page">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/TotalPts"
        android:layout_width="327dp"
        android:layout_height="265dp"
        android:layout_marginTop="350dp"
        android:background="@color/modal_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/TotalPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="TOTAL POINTS:"
            android:textColor="@color/font_color_green"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TotalPointsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/font_color_green"
            android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@id/TotalPoints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/StudIdBG"
        android:layout_width="216dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:background="@color/modal_color"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.234">

        <TextView
            android:id="@+id/StudId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Number:"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/StudNameBG"
        android:layout_width="216dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:background="@color/modal_color"
        app:layout_constraintEnd_toEndOf="@+id/StudIdBG"
        app:layout_constraintStart_toStartOf="@+id/StudIdBG"
        app:layout_constraintTop_toBottomOf="@+id/StudIdBG"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/StudName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="190dp"
        android:layout_height="202dp"
        android:src="@drawable/copilot_20250807_112245"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="170dp"
        android:layout_height="18dp"
        android:layout_marginTop="156dp"
        android:text="ECOCYCLE:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <!-- Header for the user profile (Name shown at top-left of modal) -->
    <TextView
        android:id="@+id/SubTitle"
        android:layout_width="121dp"
        android:layout_height="32dp"
        android:text="Little Waste\nBig Reward"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/Title"
        app:layout_constraintStart_toStartOf="@+id/Title"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="147dp"
        android:layout_height="130dp"
        android:layout_marginTop="204dp"
        android:src="@android:drawable/alert_light_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/PrizeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Prize"
        app:layout_constraintStart_toStartOf="@+id/TotalPts"
        app:layout_constraintTop_toBottomOf="@+id/TotalPts" />

    <Button
        android:id="@+id/LogoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="@+id/TotalPts"
        app:layout_constraintTop_toBottomOf="@+id/TotalPts" />

</androidx.constraintlayout.widget.ConstraintLayout>