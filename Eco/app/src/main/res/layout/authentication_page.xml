<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_green_phone"
    tools:context=".authentication_page">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="298dp"
        android:layout_height="260dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/copilot_20250807_112245" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/AuthPage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/modal_color"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/AuthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Enter Your Email To Send You an OTP."
            android:textColor="@color/font_color_green"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Email Input Field -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEmail"
            android:layout_width="248dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="@+id/AuthTitle"
            app:layout_constraintStart_toStartOf="@+id/AuthTitle"
            app:layout_constraintTop_toBottomOf="@+id/AuthTitle" />

        <!-- OTP Input Field -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputOtp"
            android:layout_width="248dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:hint="Input Your OTP Code"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/inputEmail"
            app:layout_constraintStart_toStartOf="@+id/inputEmail"
            app:layout_constraintTop_toBottomOf="@+id/inputEmail" />

        <!-- Login Button -->
        <Button
            android:id="@+id/AuthBtn"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/font_color_green"
            android:text="Login"
            app:layout_constraintEnd_toEndOf="@+id/inputOtp"
            app:layout_constraintStart_toStartOf="@+id/inputOtp"
            app:layout_constraintTop_toBottomOf="@+id/inputOtp" />

        <!-- Resend/OTP Info -->
        <TextView
            android:id="@+id/ResentOpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't Receive? "
            android:textColor="@color/font_color_green"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@+id/AuthBtn"
            app:layout_constraintStart_toStartOf="@+id/AuthBtn" />

        <TextView
            android:id="@+id/Resent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend Code"
            android:textColor="@color/font_color_green"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ResentOpt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ResentOpt" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="ECOCYCLE:"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/AuthPage"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/AuthPage"
        app:layout_constraintTop_toBottomOf="@+id/AuthPage" />

    <TextView
        android:id="@+id/SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Little Waste\nBig Reward"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Title"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/Title"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

</androidx.constraintlayout.widget.ConstraintLayout>
