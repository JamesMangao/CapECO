<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_green_phone"
    tools:context=".login_page">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="237dp"
        android:layout_height="240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/copilot_20250807_112245" />

    <!-- Login Card Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LogPage"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@color/modal_color"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <!-- Student ID or Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputIdLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="Student ID or Name"
            app:hintTextColor="@color/tan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/InputId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Input with Toggle -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputPassLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Password"
            app:hintTextColor="@color/tan"
            app:endIconMode="password_toggle"
            app:layout_constraintEnd_toEndOf="@id/InputIdLayout"
            app:layout_constraintStart_toStartOf="@id/InputIdLayout"
            app:layout_constraintTop_toBottomOf="@id/InputIdLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/InputPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Login Button -->
        <Button
            android:id="@+id/LoginBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/font_color_green"
            android:text="Login"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="@+id/InputPassLayout"
            app:layout_constraintStart_toStartOf="@+id/InputPassLayout"
            app:layout_constraintTop_toBottomOf="@+id/InputPassLayout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="ECOCYCLE:"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/LogPage"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/LogPage"
        app:layout_constraintTop_toBottomOf="@+id/LogPage" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Little Waste\nBig Reward"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Title"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/Title"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

</androidx.constraintlayout.widget.ConstraintLayout>
